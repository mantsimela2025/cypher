# CYPHER API Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Connection
DATABASE_URL=postgresql://username:password@host:port/database
PGHOST=your-database-host
PGPORT=5432
PGUSER=your-database-user
PGPASSWORD=your-database-password
PGDATABASE=your-database-name

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Session and JWT secrets (generate new ones for production)
SESSION_SECRET=your-session-secret-key-here
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Encryption key for sensitive data (32-byte hex string)
ENCRYPTION_KEY=your-encryption-key-here

# Authentication bypass (DISABLED for security)
# AUTH_BYPASS feature has been disabled for security. Authentication is always required.
# Login screen will be shown on every application startup.
AUTH_BYPASS=false

# =============================================================================
# CORS AND CLIENT CONFIGURATION
# =============================================================================
# Frontend URL for CORS and email links
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
DEFAULT_AI_PROVIDER=openai

# API Keys (replace with your actual keys)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
# XAI_API_KEY=your-xai-api-key
# PERPLEXITY_API_KEY=your-perplexity-api-key

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
NVD_API_KEY=your-nvd-api-key
MAILERSEND_API_KEY=your-mailersend-api-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email sender information
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your App Name
ADMIN_EMAIL=admin@yourdomain.com

# SMTP Configuration (if not using API-based email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_TLS_REJECT_UNAUTHORIZED=true

# AWS SES Configuration (preferred for production)
AWS_SES_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=10485760

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Tenable Configuration
TENABLE_BASE_URL=https://cloud.tenable.com
TENABLE_ACCESS_KEY=your-tenable-access-key
TENABLE_SECRET_KEY=your-tenable-secret-key

# =============================================================================
# ENVIRONMENT-SPECIFIC NOTES
# =============================================================================
# Development: Use localhost URLs and test API keys
# Testing: Use test database and staging API keys
# Production: Use production database, real API keys, and HTTPS URLs
