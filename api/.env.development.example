# CYPHER API - Development Environment Template
# Copy to .env for development use

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development

# =============================================================================
# CORS AND CLIENT CONFIGURATION
# =============================================================================
# Development URLs
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Tenable Mock Server for Development
TENABLE_BASE_URL=http://localhost:5001
TENABLE_ACCESS_KEY=mock_access_key
TENABLE_SECRET_KEY=mock_secret_key

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================
# Authentication bypass (keep false for security)
AUTH_BYPASS=false

# =============================================================================
# RATE LIMITING (More lenient for development)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# EMAIL CONFIGURATION (Development)
# =============================================================================
EMAIL_FROM=dev-noreply@localhost
EMAIL_FROM_NAME=CYPHER Dev
ADMIN_EMAIL=dev-admin@localhost
